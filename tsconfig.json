{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowJs": true,
    "target": "ES6",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "baseUrl": "./source",
    "paths": {
      "app/*": ["./*"]
    }
  },
  "include": [
    "./source/**/*",
    "app.ts"
  ]
}