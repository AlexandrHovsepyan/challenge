{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "allowJs": true,
    "target": "ES6",
    "preserveConstEnums": true,
    "resolveJsonModule": true
  },
  "include": [
    "./source/**/*",
    "./configs/**/*.json",
    "app.ts"
  ]
}